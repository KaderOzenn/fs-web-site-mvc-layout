
<!DOCTYPE html>
<html>

<head>

    <!-- Login Admin Sayfası Girişi -->
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>P&B Software Yönetim Paneli || Giriş</title>

    <link rel="icon" href="../../favicon.ico" type="image/x-icon">

    <!-- Google Fontlar eklendi. -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">



    <!--CSS Ekleme -->
    <link href="~/Content/Admin/plugins/bootstrap/css/bootstrap.css" rel="stylesheet">

    <link href="~/Content/Admin/plugins/node-waves/waves.css" rel="stylesheet" />

    <link href="~/Content/Admin/plugins/animate-css/animate.css" rel="stylesheet" />

    <link href="~/Content/Admin/css/style.css" rel="stylesheet">

</head>


     <!-- Login Giriş Tasarım -->

<body class="login-page">
    <div class="login-box">
        <div class="logo">
            <a href="javascript:void(0);">Admin Girişi</b></a>
            <small>Lütfen Giriş Yapınız</small>
        </div>

        <div class="card">
            <div class="body">
                <form id="sign_in" method="POST">
                    
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons  col-pink">person</i>
                        </span>

                        <div class="form-line">
                            <input type="text" class="form-control" name="username" placeholder="Kullanıcı Adı" required autofocus>
                        </div>
                    </div>

                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons  col-pink">lock</i>
                        </span>
                        <div class="form-line">
                            <input type="password" class="form-control" name="password" placeholder="Şifre" required>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-8 p-t-5">
                            <input type="checkbox" name="rememberme" id="rememberme" class="filled-in chk-col-pink">
                            <label for="rememberme">Beni Hatırla</label>
                        </div>

                        <div class="col-xs-4">
                            <button class="btn btn-block bg-pink waves-effect" type="submit">Giriş Yap</button>
                        </div>
                    </div>

                    <div class="row m-t-15 m-b--20">
                        <div class="col-xs-6">
                            <a href="sign-up.html">Üye Ol!</a>
                        </div>
                        <div class="col-xs-6 align-right">
                            <a href="forgot-password.html">Şifreni mi Unuttun?</a>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Javascript Kütüphanesi eklenmesi -->

    <script src="@Url.Content("~/Content/Admin/plugins/jquery/jquery.min.js")"></script>


    <script src="@Url.Content("~/Content/Admin/plugins/bootstrap/js/bootstrap.js")"></script>


    <script src="@Url.Content("~/Content/Admin/plugins/node-waves/waves.js")"></script>


    <script src="@Url.Content("~/Content/Admin/plugins/jquery-validation/jquery.validate.js")"></script>


    <script src="@Url.Content("~/Content/Admin/js/admin.js")"></script>
    <script src="@Url.Content("~/Content/Admin/js/pages/examples/sign-in.js")"></script>
</body>

</html>